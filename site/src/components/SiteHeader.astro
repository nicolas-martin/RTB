---

const navItems = [
	{ href: '/', label: 'Quests' },
	{ href: '/ecosystem/', label: 'Ecosystem' },
	{ href: '/profile/', label: 'Profile' }
];
const { currentPath = '/' } = Astro.props;
const isActive = (href) => {
	const current = currentPath;
	const target = href;
	
	// If the target is the root path ('/'), it should only be active if the current path is exactly '/'
	if (target === '/') {
		return current === '/';
	}
	
	// For any other target path, check if the current path starts with the target path
	return current.startsWith(target);
};
---
<header class="topbar">
	<div class="brand">
		<span style="font-size: 28px;">☀️</span>
    <span>June</span>
  </div>
  <nav>
    {navItems.map((item) => (
      <a
        href={item.href}
        class={['nav-link', isActive(item.href) ? 'active' : ''].join(' ')}
      >
        {item.label}
      </a>
    ))}
  </nav>
  <div id="quest-topbar-extra" class="topbar-extra"></div>
</header>

<style>
  .topbar {
    position: sticky;
    top: 0;
    z-index: 40;
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 20px var(--page-padding, 32px) 16px;
    background: #000000;
    border-bottom: 1px solid #333333;
    flex-wrap: wrap;
  }

  .brand {
    display: flex;
    align-items: center;
    gap: 12px;
    font-weight: 600;
    letter-spacing: -0.01em;
  }

  .brand span {
    font-size: 18px;
  }

  nav {
    display: flex;
    gap: 16px;
  }

  .topbar-extra {
    margin-left: auto;
    flex: 1 1 auto;
    display: flex;
    justify-content: flex-end;
  }

  .nav-link {
    position: relative;
    font-weight: 500;
    padding: 6px 12px;
    border-radius: 999px;
    color: rgba(245, 245, 247, 0.68);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .nav-link:hover:not(.active) {
    color: var(--text-primary);
    background: rgba(255, 255, 255, 0.08);
  }

  .nav-link.active {
    color: var(--text-primary) !important;
    text-decoration: underline !important;
    text-decoration-color: #5d5bff !important;
    text-decoration-thickness: 1px !important;
    text-underline-offset: 4px !important;
  }

  @media (max-width: 640px) {
    .topbar {
      padding-inline: 20px;
      gap: 12px;
    }

    .brand span {
      display: none;
    }

    nav {
      order: 3;
      width: 100%;
      margin-left: 0;
      justify-content: center;
    }

    .topbar-extra {
      order: 4;
      width: 100%;
      justify-content: flex-start;
    }
  }
</style>
