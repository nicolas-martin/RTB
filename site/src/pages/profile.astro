---
import BaseLayout from '../layouts/BaseLayout.astro';
import SiteHeader from '../components/SiteHeader.astro';
import QuestProvider from '../components/QuestProvider';
import ProfileStatsGrid from '../components/ProfileStatsGrid';
import { ProfileEarningHistory } from '../components/ProfileEarningHistory';
import { ProfileTransactionHistory } from '../components/ProfileTransactionHistory';

const title = "Profile â€” June";
const description = "Your June profile - track your points, earnings, and activity";
---
<BaseLayout title={title} description={description}>
  <SiteHeader slot="header" currentPath="/profile/" />

  <QuestProvider client:load>
    <main class="profile-container">
    <div class="content">
      <h1>0x74...B8B4</h1>

      <!-- STATS GRID -->
      <ProfileStatsGrid client:load />

      <!-- EARNING HISTORY -->
      <ProfileEarningHistory client:only="react" />

      <!-- PROJECT TRANSACTION HISTORY -->
      <ProfileTransactionHistory client:only="react" />
    </div>
  </main>
  </QuestProvider>
</BaseLayout>

<style>
  .profile-container {
    max-width: 1180px;
    margin: 0 auto;
    padding: 40px var(--page-padding, 32px);
  }

  .content {
    margin: 0;
  }

  h1 {
    font-size: clamp(24px, 4vw, 32px);
    font-weight: 700;
    margin: 0 0 32px;
    color: var(--text-primary);
    font-family: monospace;
  }
</style>
