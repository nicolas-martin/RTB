---
const site = {
  name: "Orken",
  userCTA: { label: "Discover apps", href: "/ecosystem" },
  devCTA:  { label: "Get listed", href: "/list-your-app" },
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Profile â€” {site.name}</title>
    <meta name="description" content="Your Orken profile - track your points, earnings, and activity" />
    <style>
      :root{
        --bg:#0b0b0d;--panel:#0f0f13;--ink:#e9ecf6;--dim:#b7bccb;--muted:#9399a7;
        --ring:#20212b;--brand:#8ab0ff;--mint:#7bffd1;--radius:18px;
        --shadow:0 12px 32px rgba(0,0,0,.35);--glow:0 0 80px rgba(138,176,255,.12),0 0 140px rgba(123,255,209,.06);
      }
      *{box-sizing:border-box} html,body{margin:0;background:var(--bg);color:var(--ink);font-family:ui-sans-serif,system-ui,Inter,Segoe UI,Roboto,Arial}
      a{color:inherit;text-decoration:none}
      .container{max-width:1180px;margin:0 auto;padding:24px}

      /* NAV */
      .nav{position:sticky;top:0;z-index:40;backdrop-filter:blur(10px) saturate(1.1);background:linear-gradient(to bottom,rgba(11,11,13,.8),rgba(11,11,13,.35));border-bottom:1px solid var(--ring)}
      .nav-in{display:flex;align-items:center;justify-content:space-between;padding:12px 0}
      .brand{display:flex;align-items:center;gap:12px;font-weight:700}
      .sun{width:10px;height:10px;border-radius:50%;background:radial-gradient(60% 60% at 50% 50%,#ff9a62 0%,#ff6b35 40%,#ff4500 100%);box-shadow:0 0 18px rgba(255,154,98,.55)}
      .btn{display:inline-flex;align-items:center;gap:10px;padding:10px 14px;border-radius:999px;border:1px solid var(--ring);background:#111115;transition:.18s;color:inherit;text-decoration:none;cursor:pointer;font:inherit}
      .btn:hover{transform:translateY(-1px);box-shadow:var(--shadow)}
      .btn-primary{background:linear-gradient(120deg,rgba(138,176,255,.16),rgba(123,255,209,.12));border-color:rgba(138,176,255,.35)}
      .btn-ghost{background:transparent;color:#cfd5e6}

      /* CONTENT */
      .content{margin:40px 0}
      h1{font-size:clamp(28px,4vw,36px);font-weight:800;margin:0 0 32px;color:var(--ink)}

      /* PROFILE HEADER */
      .profile-header{display:flex;align-items:center;gap:20px;margin-bottom:40px;padding:24px;background:linear-gradient(180deg,#0f0f13,#0b0b0f);border:1px solid var(--ring);border-radius:var(--radius)}
      .profile-avatar{position:relative;width:80px;height:80px;border-radius:50%;background:var(--ring);display:flex;align-items:center;justify-content:center;cursor:pointer;transition:all 0.2s}
      .profile-avatar:hover{border:2px solid var(--brand)}
      .avatar-placeholder{width:40px;height:40px;border-radius:50%;background:var(--brand);display:flex;align-items:center;justify-content:center;color:white;font-size:20px;font-weight:600}
      .profile-info{flex:1}
      .profile-name{font-size:24px;font-weight:700;margin:0 0 8px;color:var(--ink)}
      .wallet-address{font-size:14px;color:var(--muted);margin:0 0 12px;font-family:monospace;padding:8px 12px;border:1px solid var(--ring);border-radius:8px;background:rgba(255,255,255,0.03);display:inline-block}
      .discord-btn{display:inline-flex;align-items:center;gap:8px;padding:6px 12px;border-radius:8px;border:1px solid var(--ring);background:transparent;color:var(--ink);font-size:14px;cursor:pointer;transition:all 0.2s}
      .discord-btn:hover{background:var(--ring);transform:translateY(-1px)}

      /* STATS GRID */
      .stats-grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(200px,1fr));gap:16px;margin-bottom:40px}
      .stat-card{padding:20px;background:linear-gradient(180deg,#0f0f13,#0b0b0f);border:1px solid var(--ring);border-radius:var(--radius);transition:all 0.2s}
      .stat-card:hover{border-color:#262638;transform:translateY(-1px);box-shadow:var(--shadow)}
      .stat-label{font-size:12px;color:var(--muted);text-transform:uppercase;letter-spacing:0.5px;margin-bottom:8px}
      .stat-value{font-size:24px;font-weight:700;color:var(--ink);margin:0}

      /* EARNING HISTORY */
      .earning-history{margin-top:40px}
      .history-title{font-size:20px;font-weight:700;margin:0 0 16px;color:var(--ink)}
      .history-table{width:100%;border-collapse:collapse;background:linear-gradient(180deg,#0f0f13,#0b0b0f);border:1px solid var(--ring);border-radius:var(--radius);overflow:hidden}
      .history-table th{padding:16px;background:var(--ring);color:var(--ink);font-weight:600;text-align:left;font-size:14px}
      .history-table td{padding:16px;border-top:1px solid var(--ring);color:var(--dim);font-size:14px}
      .history-table tr:hover{background:rgba(255,255,255,0.02)}
      .reward-amount{color:var(--mint);font-weight:600}
      .app-title{color:var(--ink)}

      /* FOOTER */
      .footer{margin:80px 0 28px;border-top:1px solid var(--ring);padding-top:32px;color:var(--muted);display:flex;justify-content:space-between;align-items:center;gap:20px;flex-wrap:wrap}
      .footer-left{display:flex;align-items:center;gap:20px}
      .footer-right{display:flex;align-items:center;gap:20px}
      .social-links{display:flex;gap:12px}
      .social-icon{width:20px;height:20px;opacity:0.7;transition:opacity 0.2s}
      .social-icon:hover{opacity:1}
      .footer-links{display:flex;gap:16px;flex-wrap:wrap}
      .footer-links a{color:var(--muted);font-size:14px;transition:color 0.2s}
      .footer-links a:hover{color:var(--ink)}
    </style>
  </head>
