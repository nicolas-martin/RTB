---
import BaseLayout from '../layouts/BaseLayout.astro';
import SiteHeader from '../components/SiteHeader.astro';
import QuestProvider from '../components/QuestProvider';
import { ProfileEarningHistory } from '../components/ProfileEarningHistory';

const title = "Profile â€” June";
const description = "Your June profile - track your points, earnings, and activity";
---
<BaseLayout title={title} description={description}>
  <SiteHeader slot="header" currentPath="/profile/" />

  <QuestProvider client:load>
    <main class="profile-container">
    <div class="content">
      <h1>Profile</h1>

      <!-- PROFILE HEADER -->
      <div class="profile-header">
        <div class="profile-avatar">
          <div class="avatar-placeholder">JD</div>
        </div>
        <div class="profile-info">
          <div class="profile-name">John Doe</div>
          <div class="wallet-address">0x74...B8B4</div>
          <button class="discord-btn">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
              <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"/>
            </svg>
            Connect Discord
          </button>
        </div>
      </div>

      <!-- STATS GRID -->
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-label">Points Earned</div>
          <div class="stat-value">2,340</div>
        </div>
        <div class="stat-card">
          <div class="stat-label">USDT Earned</div>
          <div class="stat-value">$45.20</div>
        </div>
        <div class="stat-card">
          <div class="stat-label">XPL Earned</div>
          <div class="stat-value">125.5</div>
        </div>
        <div class="stat-card">
          <div class="stat-label">Ratings Given</div>
          <div class="stat-value">18</div>
        </div>
        <div class="stat-card">
          <div class="stat-label">Comments Made</div>
          <div class="stat-value">12</div>
        </div>
        <div class="stat-card">
          <div class="stat-label">Total Transactions</div>
          <div class="stat-value">47</div>
        </div>
        <div class="stat-card">
          <div class="stat-label">Discord Streak</div>
          <div class="stat-value">7 days</div>
        </div>
      </div>

      <!-- EARNING HISTORY -->
      <ProfileEarningHistory client:only="react" />
    </div>
  </main>
  </QuestProvider>
</BaseLayout>

<style>
  .profile-container {
    max-width: 1180px;
    margin: 0 auto;
    padding: 40px var(--page-padding, 32px);
  }

  .content {
    margin: 0;
  }

  h1 {
    font-size: clamp(28px, 4vw, 36px);
    font-weight: 800;
    margin: 0 0 32px;
    color: var(--text-primary);
  }

  /* PROFILE HEADER */
  .profile-header {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 40px;
    padding: 24px;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.02));
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 18px;
  }

  .profile-avatar {
    position: relative;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.05);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s;
  }

  .profile-avatar:hover {
    border: 2px solid var(--brand);
  }

  .avatar-placeholder {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--brand);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 20px;
    font-weight: 600;
  }

  .profile-info {
    flex: 1;
  }

  .profile-name {
    font-size: 24px;
    font-weight: 700;
    margin: 0 0 8px;
    color: var(--text-primary);
  }

  .wallet-address {
    font-size: 14px;
    color: var(--text-secondary);
    margin: 0 0 12px;
    font-family: monospace;
    padding: 8px 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.03);
    display: inline-block;
  }

  .discord-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 6px 12px;
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background: transparent;
    color: var(--text-primary);
    font-size: 14px;
    cursor: pointer;
    transition: all 0.2s;
  }

  .discord-btn:hover {
    background: rgba(255, 255, 255, 0.05);
    transform: translateY(-1px);
  }

  /* STATS GRID */
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 16px;
    margin-bottom: 40px;
  }

  .stat-card {
    padding: 20px;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.02));
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 18px;
    transition: all 0.2s;
  }

  .stat-card:hover {
    border-color: rgba(255, 255, 255, 0.2);
    transform: translateY(-1px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.35);
  }

  .stat-label {
    font-size: 12px;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 8px;
  }

  .stat-value {
    font-size: 24px;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0;
  }

  @media (max-width: 768px) {
    .profile-header {
      flex-direction: column;
      text-align: center;
    }

    .stats-grid {
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    }
  }
</style>
