---
import BaseLayout from '../layouts/BaseLayout.astro';
import SiteHeader from '../components/SiteHeader.astro';
import ProfilePage from '../components/ProfilePage';

const title = "Profile â€” June";
const description = "Your June profile - track your points, earnings, and activity";
---
<BaseLayout title={title} description={description}>
  <SiteHeader slot="header" currentPath="/profile/" />

  <main class="profile-container">
    <div class="content">
      <ProfilePage client:load />
    </div>
  </main>
</BaseLayout>

<style>
  .profile-container {
    max-width: 1180px;
    margin: 0 auto;
    padding: 40px var(--page-padding, 32px);
  }

  .content {
    margin: 0;
  }

  h1 {
    font-size: clamp(24px, 4vw, 32px);
    font-weight: 700;
    margin: 0 0 32px;
    color: var(--text-primary);
    font-family: monospace;
  }
</style>
