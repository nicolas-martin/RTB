---
const site = {
  name: "Plasma Hub",
  userCTA: { label: "Discover apps", href: "/ecosystem" },
  devCTA:  { label: "Get listed", href: "/list-your-app" },
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{site.name} — Builders × Users</title>
    <meta name="description" content="Help Plasma builders acquire and retain users. Help users discover apps, give feedback, and earn meaningful rewards." />
    <style>
      :root{
        --bg:#0b0b0d;--panel:#0f0f13;--ink:#e9ecf6;--dim:#b7bccb;--muted:#9399a7;
        --ring:#20212b;--brand:#8ab0ff;--mint:#7bffd1;--radius:18px;
        --shadow:0 12px 32px rgba(0,0,0,.35);--glow:0 0 80px rgba(138,176,255,.12),0 0 140px rgba(123,255,209,.06);
      }
      *{box-sizing:border-box} html,body{margin:0;background:var(--bg);color:var(--ink);font-family:ui-sans-serif,system-ui,Inter,Segoe UI,Roboto,Arial}
      a{color:inherit;text-decoration:none}
      .container{max-width:1180px;margin:0 auto;padding:24px}

      /* NAV */
      .nav{position:sticky;top:0;z-index:40;backdrop-filter:blur(10px) saturate(1.1);background:linear-gradient(to bottom,rgba(11,11,13,.8),rgba(11,11,13,.35));border-bottom:1px solid var(--ring)}
      .nav-in{display:flex;align-items:center;justify-content:space-between;padding:12px 0}
      .brand{display:flex;align-items:center;gap:12px;font-weight:700}
      .sun{width:10px;height:10px;border-radius:50%;background:radial-gradient(60% 60% at 50% 50%,#ffe27a 0%,#ff9a62 40%,#b35cff 100%);box-shadow:0 0 18px rgba(255,226,122,.55)}
      .btn{display:inline-flex;align-items:center;gap:10px;padding:10px 14px;border-radius:999px;border:1px solid var(--ring);background:#111115;transition:.18s;color:inherit;text-decoration:none;cursor:pointer;font:inherit}
      .btn:hover{transform:translateY(-1px);box-shadow:var(--shadow)}
      .btn-primary{background:linear-gradient(120deg,rgba(138,176,255,.16),rgba(123,255,209,.12));border-color:rgba(138,176,255,.35)}
      .btn-ghost{background:transparent;color:#cfd5e6}

      /* HERO */
      .hero{margin-top:20px;margin-bottom:0;border:1px solid var(--ring);border-radius:32px;overflow:hidden;box-shadow:var(--glow);
        background:radial-gradient(1200px 600px at 70% -10%,rgba(138,176,255,.10),transparent 60%),radial-gradient(900px 500px at 0% 20%,rgba(123,255,209,.08),transparent 60%),linear-gradient(180deg,#0d0d12,#0a0a0e)}
      .hero-grid{display:grid;grid-template-columns:1.1fr .9fr;gap:24px;padding:44px}
      @media(max-width:980px){.hero-grid{grid-template-columns:1fr;padding:28px}}
      .eyebrow{color:var(--mint);font-size:13px;letter-spacing:.3px;text-transform:uppercase}
      .h1{font-size:clamp(30px,5vw,52px);line-height:1.06;margin:8px 0 10px;font-weight:800}
      .lead{color:var(--dim);max-width:46ch;line-height:1.55}
      .hero-actions{display:flex;gap:12px;margin-top:18px;flex-wrap:wrap}
      .hero-image-container{width:100%;height:100%;border:1px solid var(--ring);border-radius:var(--radius);overflow:hidden;background:#14141a}
      .hero-image{width:100%;height:100%;object-fit:cover;display:block;margin:0;padding:0}

      /* SECTION BASE */
      .section{margin:60px 0}
      .head{display:flex;align-items:flex-end;justify-content:space-between;gap:14px;margin-bottom:16px}
      .title{font-size:clamp(22px,3vw,28px);font-weight:800}
      .sub{color:var(--dim);max-width:64ch}
      .grid{display:grid;gap:16px}
      .panel{background:linear-gradient(180deg,#0f0f13,#0b0b0f);border:1px solid var(--ring);border-radius:var(--radius);box-shadow:none;padding:18px}
      .panel:hover{box-shadow:var(--shadow);border-color:#262638;transform:translateY(-1px);transition:.18s}

      /* USERS: designed variant */
      .users{display:grid;grid-template-columns:1.15fr .85fr;gap:18px}
      @media(max-width:980px){.users{grid-template-columns:1fr}}
      .big{font-size:clamp(26px,3.6vw,34px);line-height:1.2;margin:6px 0 10px;font-weight:800}
      .steps{display:grid;grid-template-columns:repeat(3,minmax(0,1fr));gap:12px;margin-top:14px}
      @media(max-width:980px){.steps{grid-template-columns:1fr}}
      .step{border:1px dashed #242536;border-radius:14px;padding:14px;background:#101015}
      .step .n{font-size:12px;color:var(--mint);letter-spacing:.3px;text-transform:uppercase}
      .step h4{margin:6px 0 6px;font-size:16px}
      .step p{margin:0;color:var(--dim);line-height:1.55}
      .rail{display:flex;gap:10px;flex-wrap:wrap;margin-top:14px}
      .pill{padding:8px 12px;border-radius:999px;border:1px solid #22222e;background:#121219;color:#cfd5e6;font-size:13px}

      .score{display:grid;grid-template-columns:1fr 1fr;gap:12px}
      .lb{padding:0}
      .lb-head{display:flex;align-items:center;justify-content:space-between;padding:14px;border-bottom:1px solid var(--ring);color:var(--muted);font-size:13px}
      .lb-list{padding:10px 6px}
      .row{display:flex;align-items:center;justify-content:space-between;padding:10px 10px;border-radius:12px}
      .row:nth-child(odd){background:#101117}
      .tag{font-size:12px;color:var(--muted)}
      .stat{display:flex;flex-direction:column;gap:4px;align-items:flex-start}
      .k{font-size:22px;font-weight:800}
      .note{color:var(--muted);font-size:12px;margin-top:8px}

      /* MARQUEE */
      .marquee{overflow:hidden;border:1px solid var(--ring);border-radius:var(--radius);background:linear-gradient(180deg,#0e0e13,#0b0b10)}
      .track{display:flex;gap:28px;padding:14px 18px;animation:roll 24s linear infinite}
      @keyframes roll{from{transform:translateX(0)}to{transform:translateX(-50%)}}

      /* DEVELOPERS */
      .dev{display:grid;grid-template-columns:1fr;gap:12px}
      .kpis{display:grid;grid-template-columns:repeat(3,minmax(0,1fr));gap:12px}
      @media(max-width:980px){.kpis{grid-template-columns:1fr}}
      .kpi{display:flex;flex-direction:column;gap:2px}
      .kpi .n{font-size:26px;font-weight:800}
      .how{display:grid;grid-template-columns:repeat(3,minmax(0,1fr));gap:12px}
      @media(max-width:980px){.how{grid-template-columns:1fr}}
      .num{width:22px;height:22px;border-radius:50%;display:inline-grid;place-items:center;font-size:12px;background:#141521;border:1px solid #242536;color:#cfe2ff;margin-right:8px}

      /* FOOTER & reveal */
      .footer{margin:70px 0 28px;border-top:1px solid var(--ring);padding-top:20px;color:var(--muted);display:flex;justify-content:space-between;gap:10px;flex-wrap:wrap}
      .reveal{opacity:0;transform:translateY(10px);transition:.5s} .reveal.show{opacity:1;transform:translateY(0)}
    </style>
  </head>
  <body>
    <!-- NAV -->
    <div class="nav">
      <div class="container nav-in">
        <div class="brand"><span class="sun" aria-hidden="true"></span>{site.name}</div>
        <div style="display:flex;gap:10px">
          <a class="btn btn-primary" href={site.userCTA.href}>{site.userCTA.label}</a>
          <a class="btn btn-ghost" href={site.devCTA.href}>{site.devCTA.label}</a>
        </div>
      </div>
    </div>

    <main class="container">
      <!-- HERO (trimmed) -->
      <section class="hero reveal">
        <div class="hero-grid">
          <div>
            <div class="eyebrow" id="hero-eyebrow">Users power Plasma</div>
            <h1 class="h1" id="hero-title">Discover apps, shape the roadmap, <br/>and get rewarded.</h1>
            <p class="lead" id="hero-description">You try new products, share signal (ratings + feedback), and earn meaningful rewards. Builders get what they need most: real users and distribution.</p>
            <div class="hero-actions">
              <a class="btn btn-primary" id="hero-primary-btn" href={site.userCTA.href}>Discover apps</a>
              <button class="btn" id="hero-toggle-btn">I'm a developer</button>
            </div>
          </div>
          <div class="hero-image-container">
            <img class="hero-image" src="/images/ecosystem-demo.png" alt="Discovery page preview" loading="eager" decoding="async"/>
          </div>
        </div>
      </section>
    </main>

    <script is:inline>
      // reveal on scroll
      const els=document.querySelectorAll('.reveal');
      const io=new IntersectionObserver(es=>{for(const e of es)if(e.isIntersecting){e.target.classList.add('show');io.unobserve(e.target)}},{threshold:.12});
      els.forEach(el=>io.observe(el));

      // Hero toggle functionality
      let isDeveloperMode = false;
      const toggleBtn = document.getElementById('hero-toggle-btn');
      const eyebrowEl = document.getElementById('hero-eyebrow');
      const titleEl = document.getElementById('hero-title');
      const descriptionEl = document.getElementById('hero-description');
      const primaryBtnEl = document.getElementById('hero-primary-btn');

      const userContent = {
        eyebrow: 'Users power Plasma',
        title: 'Discover apps, shape the roadmap, <br/>and get rewarded.',
        description: 'You try new products, share signal (ratings + feedback), and earn meaningful rewards. Builders get what they need most: real users and distribution.',
        primaryBtn: 'Discover apps',
        toggleBtn: 'I\'m a developer'
      };

      const developerContent = {
        eyebrow: 'Builders make Plasma',
        title: 'Acquire users, retain them, build real community.',
        description: 'You get help with the hardest problem: distribution. You get real users, real feedback, real chance at success. Users get to build with you and get rewarded.',
        primaryBtn: 'Get listed',
        toggleBtn: 'I\'m a user'
      };

      toggleBtn.addEventListener('click', () => {
        isDeveloperMode = !isDeveloperMode;
        const content = isDeveloperMode ? developerContent : userContent;
        
        eyebrowEl.textContent = content.eyebrow;
        titleEl.innerHTML = content.title;
        descriptionEl.textContent = content.description;
        primaryBtnEl.textContent = content.primaryBtn;
        toggleBtn.textContent = content.toggleBtn;
        
        // Update primary button href
        primaryBtnEl.href = isDeveloperMode ? '/list-your-app' : '/ecosystem';
      });
    </script>
  </body>
</html>
