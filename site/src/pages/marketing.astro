---
const site = {
  name: "Orken",
  userCTA: { label: "Discover apps", href: "/ecosystem" },
  devCTA:  { label: "Get listed", href: "/list-your-app" },
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{site.name} — Builders × Users</title>
    <meta name="description" content="Help Plasma builders acquire and retain users. Help users discover apps, give feedback, and earn meaningful rewards." />
    <style>
      :root{
        --bg:#0b0b0d;--panel:#0f0f13;--ink:#e9ecf6;--dim:#b7bccb;--muted:#9399a7;
        --ring:#20212b;--brand:#8ab0ff;--mint:#7bffd1;--radius:18px;
        --shadow:0 12px 32px rgba(0,0,0,.35);--glow:0 0 80px rgba(138,176,255,.12),0 0 140px rgba(123,255,209,.06);
      }
      *{box-sizing:border-box} html,body{margin:0;background:var(--bg);color:var(--ink);font-family:ui-sans-serif,system-ui,Inter,Segoe UI,Roboto,Arial}
      a{color:inherit;text-decoration:none}
      .container{max-width:1180px;margin:0 auto;padding:24px}

      /* NAV */
      .nav{position:sticky;top:0;z-index:40;backdrop-filter:blur(10px) saturate(1.1);background:linear-gradient(to bottom,rgba(11,11,13,.8),rgba(11,11,13,.35));border-bottom:1px solid var(--ring)}
      .nav-in{display:flex;align-items:center;justify-content:space-between;padding:12px 0}
      .brand{display:flex;align-items:center;gap:12px;font-weight:700}
      .sun{width:10px;height:10px;border-radius:50%;background:radial-gradient(60% 60% at 50% 50%,#ff9a62 0%,#ff6b35 40%,#ff4500 100%);box-shadow:0 0 18px rgba(255,154,98,.55)}
      .btn{display:inline-flex;align-items:center;gap:10px;padding:10px 14px;border-radius:999px;border:1px solid var(--ring);background:#111115;transition:.18s;color:inherit;text-decoration:none;cursor:pointer;font:inherit}
      .btn:hover{transform:translateY(-1px);box-shadow:var(--shadow)}
      .btn-primary{background:linear-gradient(120deg,rgba(138,176,255,.16),rgba(123,255,209,.12));border-color:rgba(138,176,255,.35)}
      .btn-ghost{background:transparent;color:#cfd5e6}

      /* HERO */
      .hero{margin-top:60px;margin-bottom:0;border:1px solid var(--ring);border-radius:32px;overflow:hidden;box-shadow:var(--glow);
        background:radial-gradient(1200px 600px at 70% -10%,rgba(138,176,255,.10),transparent 60%),radial-gradient(900px 500px at 0% 20%,rgba(123,255,209,.08),transparent 60%),linear-gradient(180deg,#0d0d12,#0a0a0e)}
      .hero-grid{display:grid;grid-template-columns:1.1fr .9fr;gap:24px;padding:44px}
      @media(max-width:980px){.hero-grid{grid-template-columns:1fr;padding:28px}}
      .eyebrow{color:var(--mint);font-size:13px;letter-spacing:.3px;text-transform:uppercase}
      .h1{font-size:clamp(30px,5vw,52px);line-height:1.06;margin:8px 0 10px;font-weight:800}
      .lead{color:var(--dim);max-width:46ch;line-height:1.55}
      .hero-actions{display:flex;gap:12px;margin-top:18px;flex-wrap:wrap}
      .hero-image-container{width:100%;height:100%;border:1px solid var(--ring);border-radius:var(--radius);overflow:hidden;background:#14141a}
      .hero-image{width:100%;height:100%;object-fit:cover;display:block;margin:0;padding:0}

      /* SECTION BASE */
      .section{margin:60px 0}
      .head{display:flex;align-items:flex-end;justify-content:space-between;gap:14px;margin-bottom:16px}
      .title{font-size:clamp(22px,3vw,28px);font-weight:800}
      .sub{color:var(--dim);max-width:64ch}
      .grid{display:grid;gap:16px}
      .panel{background:linear-gradient(180deg,#0f0f13,#0b0b0f);border:1px solid var(--ring);border-radius:var(--radius);box-shadow:none;padding:18px}
      .panel:hover{box-shadow:var(--shadow);border-color:#262638;transform:translateY(-1px);transition:.18s}

      /* USERS: designed variant */
      .users{display:grid;grid-template-columns:1.15fr .85fr;gap:18px}
      @media(max-width:980px){.users{grid-template-columns:1fr}}
      .big{font-size:clamp(26px,3.6vw,34px);line-height:1.2;margin:6px 0 10px;font-weight:800}
      .steps{display:grid;grid-template-columns:repeat(3,minmax(0,1fr));gap:12px;margin-top:14px}
      @media(max-width:980px){.steps{grid-template-columns:1fr}}
      .step{border:1px dashed #242536;border-radius:14px;padding:14px;background:#101015}
      .step .n{font-size:12px;color:var(--mint);letter-spacing:.3px;text-transform:uppercase}
      .step h4{margin:6px 0 6px;font-size:16px}
      .step p{margin:0;color:var(--dim);line-height:1.55}
      .rail{display:flex;gap:10px;flex-wrap:wrap;margin-top:14px}
      .pill{padding:8px 12px;border-radius:999px;border:1px solid #22222e;background:#121219;color:#cfd5e6;font-size:13px}

      .score{display:grid;grid-template-columns:1fr 1fr;gap:12px}
      .lb{padding:0}
      .lb-head{display:flex;align-items:center;justify-content:space-between;padding:14px;border-bottom:1px solid var(--ring);color:var(--muted);font-size:13px}
      .lb-list{padding:10px 6px}
      .row{display:flex;align-items:center;justify-content:space-between;padding:10px 10px;border-radius:12px}
      .row:nth-child(odd){background:#101117}
      .tag{font-size:12px;color:var(--muted)}
      .stat{display:flex;flex-direction:column;gap:4px;align-items:flex-start}
      .k{font-size:22px;font-weight:800}
      .note{color:var(--muted);font-size:12px;margin-top:8px}

      /* MARQUEE */
      .marquee{overflow:hidden;border:1px solid var(--ring);border-radius:var(--radius);background:linear-gradient(180deg,#0e0e13,#0b0b10)}
      .track{display:flex;gap:28px;padding:14px 18px;animation:roll 24s linear infinite}
      @keyframes roll{from{transform:translateX(0)}to{transform:translateX(-50%)}}

      /* DEVELOPERS */
      .dev{display:grid;grid-template-columns:1fr;gap:12px}
      .kpis{display:grid;grid-template-columns:repeat(3,minmax(0,1fr));gap:12px}
      @media(max-width:980px){.kpis{grid-template-columns:1fr}}
      .kpi{display:flex;flex-direction:column;gap:2px}
      .kpi .n{font-size:26px;font-weight:800}
      .how{display:grid;grid-template-columns:repeat(3,minmax(0,1fr));gap:12px}
      @media(max-width:980px){.how{grid-template-columns:1fr}}
      .num{width:22px;height:22px;border-radius:50%;display:inline-grid;place-items:center;font-size:12px;background:#141521;border:1px solid #242536;color:#cfe2ff;margin-right:8px}

      /* FOOTER & reveal */
      .footer{margin:80px 0 28px;border-top:1px solid var(--ring);padding-top:32px;color:var(--muted);display:flex;justify-content:space-between;align-items:center;gap:20px;flex-wrap:wrap}
      .footer-left{display:flex;align-items:center;gap:20px}
      .footer-right{display:flex;align-items:center;gap:20px}
      .social-links{display:flex;gap:12px}
      .social-icon{width:20px;height:20px;opacity:0.7;transition:opacity 0.2s}
      .social-icon:hover{opacity:1}
      .footer-links{display:flex;gap:16px;flex-wrap:wrap}
      .footer-links a{color:var(--muted);font-size:14px;transition:color 0.2s}
      .footer-links a:hover{color:var(--ink)}
      .reveal{opacity:0;transform:translateY(10px);transition:.5s} .reveal.show{opacity:1;transform:translateY(0)}

      /* MODAL */
      .modal{position:fixed;top:0;left:0;width:100%;height:100%;background:rgba(0,0,0,.8);display:none;align-items:center;justify-content:center;z-index:100;backdrop-filter:blur(8px)}
      .modal.show{display:flex}
      .modal-content{background:linear-gradient(180deg,#0f0f13,#0b0b0f);border:1px solid var(--ring);border-radius:var(--radius);padding:32px;max-width:500px;width:90%;max-height:90vh;overflow-y:auto;box-shadow:var(--glow)}
      .modal-header{display:flex;justify-content:space-between;align-items:center;margin-bottom:24px}
      .modal-title{font-size:24px;font-weight:700;color:var(--ink)}
      .modal-close{background:none;border:none;color:var(--muted);font-size:24px;cursor:pointer;padding:0;width:32px;height:32px;display:flex;align-items:center;justify-content:center;border-radius:50%;transition:background 0.2s}
      .modal-close:hover{background:var(--ring)}
      .form-group{margin-bottom:20px}
      .form-label{display:block;margin-bottom:8px;color:var(--ink);font-weight:500}
      .form-input,.form-textarea{width:100%;padding:12px 16px;border:1px solid var(--ring);border-radius:12px;background:#111115;color:var(--ink);font-size:14px;transition:border-color 0.2s}
      .form-input:focus,.form-textarea:focus{outline:none;border-color:var(--brand)}
      .form-textarea{min-height:100px;resize:vertical}
      .form-submit{width:100%;padding:14px;background:linear-gradient(120deg,rgba(138,176,255,.16),rgba(123,255,209,.12));border:1px solid rgba(138,176,255,.35);border-radius:12px;color:var(--ink);font-weight:600;cursor:pointer;transition:all 0.2s}
      .form-submit:hover{transform:translateY(-1px);box-shadow:var(--shadow)}
      .form-submit:disabled{opacity:0.6;cursor:not-allowed;transform:none}
      .form-success{display:none;text-align:center;padding:20px;background:rgba(123,255,209,.1);border:1px solid rgba(123,255,209,.3);border-radius:12px;color:var(--mint)}
      .form-success.show{display:block}
    </style>
  </head>
  <body>
    <!-- NAV -->
    <div class="nav">
      <div class="container nav-in">
        <div class="brand"><span class="sun" aria-hidden="true"></span>{site.name}</div>
        <div style="display:flex;gap:10px">
          <a class="btn btn-primary" href={site.userCTA.href}>{site.userCTA.label}</a>
          <button class="btn btn-ghost" onclick="openModal()">{site.devCTA.label}</button>
        </div>
      </div>
    </div>

    <main class="container">
      <!-- HERO (trimmed) -->
      <section class="hero reveal">
        <div class="hero-grid">
          <div>
            <div class="eyebrow" id="hero-eyebrow">Users power Orken</div>
            <h1 class="h1" id="hero-title">Discover apps, shape the roadmap, <br/>and get rewarded.</h1>
            <p class="lead" id="hero-description">You try new products, share signal (ratings + feedback), and earn meaningful rewards. Builders get what they need most: real users and distribution.</p>
            <div class="hero-actions">
              <a class="btn btn-primary" id="hero-primary-btn" href={site.userCTA.href}>Discover apps</a>
              <button class="btn" id="hero-toggle-btn">I'm a developer</button>
            </div>
          </div>
          <div class="hero-image-container">
            <img class="hero-image" src="/images/ecosystem-demo.png" alt="Discovery page preview" loading="eager" decoding="async"/>
          </div>
        </div>
      </section>
      
      <!-- FOOTER -->
      <footer class="footer">
        <div class="footer-left">
          <span>© {new Date().getFullYear()} {site.name}. Built for the Orken ecosystem.</span>
        </div>
        <div class="footer-right">
          <div class="social-links">
            <a href="#" aria-label="Discord">
              <svg class="social-icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"/>
              </svg>
            </a>
            <a href="#" aria-label="X (Twitter)">
              <svg class="social-icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18.244 2.25h3.308l-7.227 8.26l8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
          </div>
          <div class="footer-links">
            <a href="/policies">Policies</a>
            <a href="/terms">Terms</a>
            <a href="/privacy">Privacy</a>
            <a href="/cookies">Cookies</a>
          </div>
        </div>
      </footer>
    </main>

    <!-- MODAL -->
    <div id="modal" class="modal">
      <div class="modal-content">
        <div class="modal-header">
          <h2 class="modal-title">Get Your App Listed</h2>
          <button class="modal-close" onclick="closeModal()">&times;</button>
        </div>
        
        <form id="devForm" action="https://formspree.io/f/xnngzpvj" method="POST">
          <div class="form-group">
            <label class="form-label" for="name">Name *</label>
            <input type="text" id="name" name="name" class="form-input" required>
          </div>
          
          <div class="form-group">
            <label class="form-label" for="email">Email *</label>
            <input type="email" id="email" name="email" class="form-input" required>
          </div>
          
          <div class="form-group">
            <label class="form-label" for="description">Project Description *</label>
            <textarea id="description" name="description" class="form-textarea" placeholder="Tell us about your project, what it does, and why it would be valuable for the Orken community..." required></textarea>
          </div>
          
          <div class="form-group">
            <label class="form-label" for="website">Website Link *</label>
            <input type="url" id="website" name="website" class="form-input" placeholder="https://your-project.com" required>
          </div>
          
          <button type="submit" class="form-submit">Submit Application</button>
        </form>
        
        <div id="successMessage" class="form-success">
          <h3>Thank you!</h3>
          <p>Your application has been submitted successfully. We'll review it and get back to you soon.</p>
        </div>
      </div>
    </div>

    <script is:inline>
      // reveal on scroll
      const els=document.querySelectorAll('.reveal');
      const io=new IntersectionObserver(es=>{for(const e of es)if(e.isIntersecting){e.target.classList.add('show');io.unobserve(e.target)}},{threshold:.12});
      els.forEach(el=>io.observe(el));

      // Hero toggle functionality
      let isDeveloperMode = false;
      const toggleBtn = document.getElementById('hero-toggle-btn');
      const eyebrowEl = document.getElementById('hero-eyebrow');
      const titleEl = document.getElementById('hero-title');
      const descriptionEl = document.getElementById('hero-description');
      const primaryBtnEl = document.getElementById('hero-primary-btn');

      const userContent = {
        eyebrow: 'Users power Orken',
        title: 'Discover apps, shape the roadmap, <br/>and get rewarded.',
        description: 'You try new products, share signal (ratings + feedback), and earn meaningful rewards. Builders get what they need most: real users and distribution.',
        primaryBtn: 'Discover apps',
        toggleBtn: 'I\'m a developer'
      };

      const developerContent = {
        eyebrow: 'Builders make Orken',
        title: 'Acquire users, retain them, build real community.',
        description: 'You get help with the hardest problem: distribution. You get real users, real feedback, real chance at success. Users get to build with you and get rewarded.',
        primaryBtn: 'Get listed',
        toggleBtn: 'I\'m a user'
      };

      toggleBtn.addEventListener('click', () => {
        isDeveloperMode = !isDeveloperMode;
        const content = isDeveloperMode ? developerContent : userContent;
        
        eyebrowEl.textContent = content.eyebrow;
        titleEl.innerHTML = content.title;
        descriptionEl.textContent = content.description;
        primaryBtnEl.textContent = content.primaryBtn;
        toggleBtn.textContent = content.toggleBtn;
        
        // Update primary button href and onclick
        if (isDeveloperMode) {
          primaryBtnEl.href = '#';
          primaryBtnEl.onclick = (e) => {
            e.preventDefault();
            openModal();
          };
        } else {
          primaryBtnEl.href = '/ecosystem';
          primaryBtnEl.onclick = null;
        }
      });

      // Modal functionality
      function openModal() {
        document.getElementById('modal').classList.add('show');
        document.body.style.overflow = 'hidden';
      }

      function closeModal() {
        document.getElementById('modal').classList.remove('show');
        document.body.style.overflow = 'auto';
        // Reset form
        document.getElementById('devForm').reset();
        document.getElementById('successMessage').classList.remove('show');
        document.getElementById('devForm').style.display = 'block';
      }

      // Close modal when clicking outside
      document.getElementById('modal').addEventListener('click', function(e) {
        if (e.target === this) {
          closeModal();
        }
      });

      // Close modal with Escape key
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
          closeModal();
        }
      });

      // Handle form submission
      document.getElementById('devForm').addEventListener('submit', function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        const submitBtn = this.querySelector('.form-submit');
        
        // Show loading state
        submitBtn.disabled = true;
        submitBtn.textContent = 'Submitting...';
        
        fetch('https://formspree.io/f/xnngzpvj', {
          method: 'POST',
          body: formData,
          headers: {
            'Accept': 'application/json'
          }
        })
        .then(response => {
          if (response.ok) {
            // Show success message
            this.style.display = 'none';
            document.getElementById('successMessage').classList.add('show');
            
            // Auto close after 3 seconds
            setTimeout(() => {
              closeModal();
            }, 3000);
          } else {
            throw new Error('Form submission failed');
          }
        })
        .catch(error => {
          alert('There was an error submitting your application. Please try again or contact us directly.');
          submitBtn.disabled = false;
          submitBtn.textContent = 'Submit Application';
        });
      });
    </script>
  </body>
</html>
